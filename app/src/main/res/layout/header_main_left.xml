<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/def_avatar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="小苹果"
        android:textColor="@color/white"
        android:textSize="@dimen/font_big"
        android:layout_toRightOf="@+id/iv_avatar"
        android:gravity="center"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_alignBottom="@+id/iv_avatar"
        />
    <TextView
        android:id="@+id/tv_honest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信誉：23"
        android:textColor="@color/white"
        android:layout_below="@+id/iv_avatar"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分：23"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_honest"
        android:layout_alignTop="@+id/tv_honest"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝：23"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_honest"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注：23"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_fans"
        android:layout_alignTop="@+id/tv_fans"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>
