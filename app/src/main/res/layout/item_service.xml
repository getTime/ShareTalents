<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    >
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/def_avatar"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="台球"
        android:gravity="center"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/tv_service_name"
        android:paddingRight="10dp"/>
    <LinearLayout
        android:id="@+id/gv_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_iv"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_avatar"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_alignRight="@+id/tv_share">
        <ImageView
            android:layout_width="@dimen/w_iv"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />
        <ImageView
            android:layout_width="@dimen/w_iv"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />
        <ImageView
            android:layout_width="@dimen/w_iv"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线下服务：80/小时"
        android:layout_below="@+id/gv_pic"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_primary"
        android:layout_alignLeft="@+id/gv_pic"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来找我吧，有惊喜哦，您不会后悔的。"
        android:layout_below="@+id/tv_type"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_secondary"
        android:layout_alignLeft="@+id/gv_pic"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_line_height"
        android:background="@color/div_line"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_browse_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="浏览量"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点赞"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="约他/她"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
